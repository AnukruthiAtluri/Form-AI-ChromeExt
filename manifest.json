{
  "manifest_version": 2,
  "name": "FormAI Extension",
  "version": "1.0",
  "description": "Auto-fill forms for job and university applications",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon-48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
